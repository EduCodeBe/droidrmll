<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	android:id="@+id/event_row"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:minHeight="?android:attr/listPreferredItemHeight"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingTop="5dip"
	android:paddingBottom="5dip"
	android:paddingRight="5dip"
	android:paddingLeft="5dip">
	<TextView
        android:id="@+id/event_title"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:paddingTop="2dip"
        android:textSize="16sp"
		android:textStyle="bold"
		android:text="title"
		android:textColor="@drawable/solid_white" />
	<TextView
        android:id="@+id/event_speakers"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/event_title"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
		android:textSize="12sp"
		android:text="speaker" />
	<TextView
        android:id="@+id/event_time"
	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
		android:layout_below="@id/event_speakers"
        android:textSize="12sp"
		android:text="time" />
	<TextView
        android:id="@+id/event_language"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
		android:layout_below="@id/event_speakers"
   		android:layout_alignParentRight="true"
        android:paddingBottom="2dip"
		android:textColor="@drawable/gray_text_color"
		android:textSize="12sp"
		android:text="language" />
	<TextView
        android:id="@+id/event_room"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
		android:layout_below="@+id/event_time"
        android:paddingBottom="2dip"
		android:textColor="@drawable/gray_text_color"
		android:textSize="12sp"
		android:text="room" />
    <View
        android:id="@+id/star_delegate"
        android:layout_width="40dip"
        android:layout_height="fill_parent"
        android:layout_marginRight="-5dip"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/event_title"
        android:layout_alignBottom="@id/event_room" />
</RelativeLayout>
